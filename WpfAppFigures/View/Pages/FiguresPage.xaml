<Page x:Class="WpfAppFigures.View.Pages.FiguresPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppFigures.View.Pages"
      xmlns:viewmodel="clr-namespace:WpfAppFigures.ViewModel" 
      d:DataContext="{d:DesignInstance Type=viewmodel:FiguresViewModel}"
      xmlns:enums="clr-namespace:WpfAppFigures.Enums"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FiguresPage">

    <Grid>
        <ToolBar Height="40" VerticalAlignment="Top" HorizontalAlignment="Center" Width="170">
            <Button Command="{Binding SelectFigureCommand}" 
                    CommandParameter="{x:Static enums:FigureType.Triangle}"
                    Width="30" 
                    Height="30" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Right"
                    Margin="10 0 0 0">
                <Polygon Points="2,18 20,18 11,0" 
                         Stroke="Black" 
                         StrokeThickness="2" 
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Center"/>
            </Button>
            <Separator Margin="10 0" />
            <Button Command="{Binding SelectFigureCommand}" 
                    CommandParameter="{x:Static enums:FigureType.Rectangle}"
                    Width="30" 
                    Height="30">
                <Rectangle Width="20" Height="20" Fill="Transparent" Stroke="Black" StrokeThickness="2"
                            HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
            <Separator Margin="10 0"/>
            <Button Command="{Binding SelectFigureCommand}" 
                    CommandParameter="{x:Static enums:FigureType.Circle}" 
                    Width="30" 
                    Height="30">
                <Ellipse Width="20" Height="20" Fill="Transparent" Stroke="Black" StrokeThickness="2" 
                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </ToolBar>
        <WrapPanel Orientation="Horizontal" Width="800" Margin="0 40 0 0">
            <TreeView Width="130" Height="410" BorderThickness="1" BorderBrush="Black"
                      ItemsSource="{Binding Figures}" HorizontalContentAlignment="Left" HorizontalAlignment="Left">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate>
                        <TreeViewItem Header="{Binding Name}" Foreground="{Binding CurrentColor}" />
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
            <ItemsControl ItemsSource="{Binding FiguresShape}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas Height="410" Width="670" Background="WhiteSmoke"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </WrapPanel>
    </Grid>
</Page>
